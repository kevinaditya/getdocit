<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.jobs.any? %>
    <h3>Jobs (<%= @user.jobs.count %>)</h3>
    <%= render @jobs %>
    <%= will_paginate @jobs %>
    <% end %>
  </div>
</div>